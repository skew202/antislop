{
    "name": "antislop",
    "displayName": "AntiSlop",
    "description": "AI-generated code slop detection",
    "version": "0.2.3",
    "publisher": "antislop",
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Linters"
    ],
    "activationEvents": [
        "onLanguage:rust",
        "onLanguage:python",
        "onLanguage:javascript",
        "onLanguage:typescript"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "AntiSlop",
            "properties": {
                "antislop.trace.server": {
                    "scope": "window",
                    "type": "string",
                    "enum": [
                        "off",
                        "messages",
                        "verbose"
                    ],
                    "default": "off",
                    "description": "Traces the communication between VS Code and the language server."
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -b",
        "watch": "tsc -b -w"
    },
    "devDependencies": {
        "@types/vscode": "^1.107.0",
        "@types/node": "^25.0.3",
        "typescript": "^5.9.3"
    },
    "dependencies": {
        "vscode-languageclient": "^9.0.1"
    }
}