{
  "packages": {
    ".": {
      "component": "core",
      "include-component-in-tag": false,
      "extra-files": [
        {
          "type": "toml",
          "path": "Cargo.toml",
          "xpath": "package.version"
        },
        {
          "type": "toml",
          "path": "crates/antislop-lsp/Cargo.toml",
          "xpath": "package.version"
        },
        {
          "type": "toml",
          "path": "Cargo.toml",
          "xpath": "workspace.dependencies.antislop"
        },
        {
          "type": "markdown",
          "path": "CHANGELOG.md"
        }
      ]
    },
    "packages/antislop": {
      "component": "npm",
      "include-component-in-tag": false,
      "extra-files": [
        {
          "type": "json",
          "path": "packages/antislop/package.json"
        },
        {
          "type": "text",
          "path": "packages/antislop/install.js",
          "match": "const VERSION = \"[^\"]+\"",
          "replace": "const VERSION = \"${version}\""
        }
      ]
    },
    "editors/vscode": {
      "component": "vscode",
      "include-component-in-tag": false,
      "extra-files": [
        {
          "type": "json",
          "path": "editors/vscode/package.json"
        }
      ]
    }
  },
  "release-type": "rust",
  "changelog-sections": [
    { "type": "feat", "section": "Features" },
    { "type": "fix", "section": "Bug Fixes" },
    { "type": "perf", "section": "Performance" },
    { "type": "refactor", "section": "Refactor" },
    { "type": "docs", "section": "Documentation" },
    { "type": "test", "section": "Tests" },
    { "type": "chore", "section": "Miscellaneous" },
    { "type": "ci", "section": "CI/CD" },
    { "type": "style", "section": "Styling" }
  ],
  "include-scope-in-title": true,
  "skip-tags": ["alpha", "beta", "rc", "pre"],
  "changelog-header": "# Changelog\n\nAll notable changes to this project will be documented in this file.\n\nThe format is based on [Keep a Changelog](https://keepachangelog.com/en/1.0.0/),\nand this project adheres to [Semantic Versioning](https://semver.org/spec/v2.0.0.html).\n\n",
  "changelog-footer": "\n\n---\n\n**[Full Changelog]**(https://github.com/skew202/antislop/compare/${previousTag}...${tag})",
  "version-label": "## ${version} (${date})",
  "pull-request-title-pattern": "Release ${version} ðŸš€",
  "separate-pull-requests": false,
  "versioning": "default"
}
